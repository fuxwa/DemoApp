{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": [
      "es2021"
    ],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "components": [
        "src/components"
      ],
      "components/*": [
        "src/components/*"
      ],
      "config": [
        "src/config"
      ],
      "config/*": [
        "src/config/*"
      ],
      "navigation": [
        "src/navigation"
      ],
      "navigation/*": [
        "src/navigation/*"
      ],
      "utils": [
        "src/utils"
      ],
      "utils/*": [
        "src/utils/*"
      ],
      "screens": [
        "src/screens"
      ],
      "screens/*": [
        "src/screens/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}